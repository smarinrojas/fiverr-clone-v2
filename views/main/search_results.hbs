<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 overview">
            <form method="post" action="/search">
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control" name="search_input" placeholder="What are you searching?.." value="{{search_result}}" >
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-success" value="Buscar">
                    </span>
                </div>
            </form>
        </div>
    </div>
        <div class=" section">
            <h1>Search Results</h1>
        
            <div class="row">
                 {{#each content.hits}}
                <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="/img/copywrite.jpg" alt="Card image cap">
                    <div class="card-body">
                    <h5 class="card-title">{{title}}Titulo</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">	
                        <button type="button" class="btn btn-sm btn-outline-secondary">Ver</button>
                        <a href="/service_detail/{{ _id }}" class="btn btn-primary">${{price}}</a>
                        </div>
                        <small class="text-muted">9 mins</small>
                    </div>
                    </div>
                </div>
                </div>
                {{/each}}       
            </div>
        </div>
    
</div>